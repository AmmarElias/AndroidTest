<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/bt_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter listview Activity"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/bt_alertdialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show customer AlertDialog"
        android:textAllCaps="false"/>


    <Button
        android:id="@+id/bt_xml"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="use xml to define menu"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/bt_action_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter ActionMode"
        android:textAllCaps="false"/>
</LinearLayout>